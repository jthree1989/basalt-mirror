{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/build/basalt_vio",
      "args": [
        "--dataset-path",
        "/repo/src/dataset/EuRoC/V1_01_easy",
        "--cam-calib",
        "${workspaceFolder}/data/euroc_ds_calib.json",
        "--dataset-type",
        "euroc",
        "--config-path",
        "${workspaceFolder}/data/euroc_config.json",
        "--marg-data",
        "${workspaceFolder}/build/euroc_marg_data",
        "--show-gui",
        "1"
      ],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    }
  ]
}